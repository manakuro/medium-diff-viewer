{
    "manifest_version": 2,

    "name": "Medium Diff Viewer",
    "description": "Diff viewer for Medium",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon_active.png"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "content_scripts": [
      {
        "matches": ["http://medium.com/p/*/edit", "https://medium.com/p/*/edit"],
        "js": ["js/content.js"]
      }
    ],

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
      "tabs",
      "storage"
    ]
}
