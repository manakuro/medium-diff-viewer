{
    "manifest_version": 2,

    "name": "Medium Diff Viewer",
    "description": "Diff viewer for Medium",
    "version": "1.0.0",

    "browser_action": {
      "default_title": "Diff Viewer for Medium",
      "default_icon": "icon.png"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "content_scripts": [
      {
        "matches": ["http://medium.com/*", "https://medium.com/*"],
        "js": ["js/content.js"]
      }
    ],

    "icons": {
        "128": "icon.png"
    },

    "permissions": [
      "tabs",
      "storage"
    ]
}
